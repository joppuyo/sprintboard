{% extends 'html.twig' %}
{% block body %}
    <div class="header">
        <div class="header-board-name">{{team.name}}</div>
    </div>
    <div class="container">
        <div class="add-board-card clearfix">
            <h1>Add Sprint</h1>
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="name">Sprint start date</label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Enter sprint name" value="{{ start_date }}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="name">Sprint end date</label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Enter sprint name" value="{{ end_date }}">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="name">Sprint name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Enter sprint name">
                </div>
                <button class="btn btn-primary" type="submit">Add sprint</button>
            </form>
        </div>
    </div>
{% endblock %}
